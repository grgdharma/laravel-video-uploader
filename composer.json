{
  "name": "dharma/laravel-video-uploader",
  "description": "Laravel package to handle large video uploads with adaptive streaming (HLS) and progress tracking",
  "type": "library",
  "license": "MIT",

  "require": {
    "php": "^8.1",
    "illuminate/support": "^10.0|^11.0"
  },

  "autoload": {
    "psr-4": {
      "Dharma\\VideoUploader\\": "src/"
    }
  },

  "autoload-dev": {
    "psr-4": {
      "Dharma\\VideoUploader\\Tests\\": "tests/"
    }
  },

  "extra": {
    "laravel": {
      "providers": [
        "Dharma\\VideoUploader\\VideoUploaderServiceProvider"
      ]
    }
  },

  "minimum-stability": "stable",
  "prefer-stable": true
}
